<%= link_to project_path(project) do %>
  <%= render layout: "shared/container", locals: { no_padding: true, attr: { class: "transform hover:scale-[1.02] transition-transform duration-300" } } do %>
    <div class="flex flex-col h-full gap-3">
      <% project_image = project.banner.attached? ? url_for(project.banner) : "https://hc-cdn.hel1.your-objectstorage.com/s/v3/42eb885e3ebc20bd5e94782b7b4bcb31bcc956d3_i.png" %>
      <div class="h-36 md:h-48">
        <img src="<%= project_image %>" alt="<%= project.title %>" class="w-full h-full object-cover" loading="lazy">
      </div>
      <div class="flex flex-col flex-grow py-2 px-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl md:text-2xl 2xl:text-3xl line-clamp-1"><%= project.title %></h2>
          <% if user_signed_in? && current_user != project.user %>
            <div><%= render "projects/follow_button", project: project %></div>
          <% end %>
        </div>
        <p class="mb-2 line-clamp-3 text-sm md:text-base 2xl:text-lg text-som-detail break-words overflow-wrap-anywhere">
          <%= project.devlogs_count %> devlogs  â€¢  <%= format_seconds(project.total_seconds_coded) %>
        </p>
        <p class="line-clamp-3 text-sm md:text-base 2xl:text-lg overflow-hidden mb-4"><%= project.description %></p>
      </div>
    </div>
  <% end %>
<% end %>